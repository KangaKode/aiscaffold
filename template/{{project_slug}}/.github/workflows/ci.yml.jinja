name: CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ["{{ python_version }}"]

    steps:
      - uses: actions/checkout@v4

      - name: Set up Python {% raw %}${{ matrix.python-version }}{% endraw %}
        uses: actions/setup-python@v5
        with:
          python-version: {% raw %}${{ matrix.python-version }}{% endraw %}

      - name: Cache pip
        uses: actions/cache@v4
        with:
          path: ~/.cache/pip
          key: {% raw %}${{ runner.os }}-pip-${{ hashFiles('requirements.txt') }}{% endraw %}

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Architecture tests (P0)
        run: python -m pytest tests/test_architecture.py -v --tb=short -m "p0"

      - name: P0 critical tests
        run: python -m pytest tests/ -v --tb=short -m "p0"

      - name: P1 important tests
        run: python -m pytest tests/ -v --tb=short -m "p1"

      - name: Full test suite with coverage
        run: python -m pytest tests/ --cov --cov-report=term-missing --tb=short -q

  lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: "{{ python_version }}"

      - name: Install linters
        run: pip install ruff black bandit

      - name: Check formatting
        run: black --check --diff .

      - name: Lint
        run: ruff check .

      - name: Security scan
{% set layer_list = layers.split(',') | map('trim') | list -%}
        run: bandit -r {% for layer in layer_list %}{{ layer }}/{% if not loop.last %} {% endif %}{% endfor %} -ll --quiet || true
