# Pre-commit hooks for {{ project_name }}
# Install: pip install pre-commit && pre-commit install

repos:
  # Black formatter
  - repo: https://github.com/psf/black
    rev: 24.10.0
    hooks:
      - id: black
        args: ['--line-length=120']

  # Ruff linter
  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v0.8.0
    hooks:
      - id: ruff
        args: ['--fix']

  # Bandit security scanner
  - repo: https://github.com/PyCQA/bandit
    rev: 1.8.0
    hooks:
      - id: bandit
        args: ['-c', 'pyproject.toml', '-r', '.']
        exclude: ^(tests/|scripts/|venv/)

  # Common checks
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v5.0.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
      - id: check-added-large-files
        args: ['--maxkb=500']
      - id: debug-statements
      - id: check-ast
      - id: check-merge-conflict

  # Red Team adversarial check (security, architecture, data safety)
  - repo: local
    hooks:
      - id: red-team-check
        name: Red Team Security & Architecture Check
        entry: python scripts/red_team_check.py
        language: python
        types: [python]
        pass_filenames: true
        always_run: false
